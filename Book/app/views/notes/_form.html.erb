<%= simple_form_for @note, :html => { :multipart => true} do |f| %> 
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a
   category") %>
  <%= f.file_field :note_img %>
  <%= f.input :title, lable: "Note Title" %>
  <%= f.input :description %>
  <%=f.input :author %>
  <%= f.button :submit, :class => "btn-custom2" %>
<% end %>